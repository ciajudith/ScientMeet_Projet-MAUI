<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:ProjetMaui.ViewModels"
			 x:Class="ProjetMaui.Views.ConferenceDetailPage"
			 x:DataType="vm:ConferenceDetailViewModel">
	<ScrollView>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.Sigle}" FontSize="20" />
            <Label Text="{Binding Item.Name}" FontSize="19" />
            <Label Text="{Binding Item.Theme}" FontSize="16" />

        </VerticalStackLayout>
	</ScrollView>
</ContentPage>
