<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:ProjetMaui.ViewModels"
			 x:Class="ProjetMaui.Views.CommentDetailPage"
			 x:DataType="vm:CommentDetailViewModel">
	<ScrollView>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.User.Email}" FontSize="Header" />
			<Label Text="{Binding Item.Libelle}" FontSize="Default" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
